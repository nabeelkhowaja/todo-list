<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/layout_density_m"
    android:layout_marginVertical="@dimen/layout_density_xs"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cbTodo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:paddingStart="@dimen/layout_density_xs"
            android:paddingLeft="@dimen/layout_density_xs"
            android:paddingEnd="@dimen/layout_density_xs"
            android:paddingRight="@dimen/layout_density_xs"
            tools:text="Go to the market and bring vegetables immediately today. " />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ibDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/layout_density_xs"
            android:layout_marginRight="@dimen/layout_density_xs"
            android:layout_weight="0.1"
            android:background="@null"
            app:srcCompat="@drawable/ic_delete"
            android:tint="@android:color/holo_red_dark" />

    </LinearLayout>

</androidx.cardview.widget.CardView>